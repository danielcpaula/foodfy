{% extends "layout.njk" %}

{% block content %}

  <main class="receitas">
    <section class="cards">
      {% for item in items %}
        <div class="card" id="burger">
          <div class="card__image-container">
            <img src={{item.image}} alt="Triplo Bacon Burguer">
          </div>
          <div class="card__content">
            <p class="card-title">{{item.title}}</p>
          </div>
          <div class="card__info">
            <p class="author">{{item.author}}</p>
          </div>
        </div>
      {% endfor %}
    </section>
  </main>

  <div class="modal-overlay">
    <div class="modal">
      <div class="modal-content">
        <img src=""></img>
      </div>
      <div class="modal-info">
        <div class="modal-title"></div>
        <div class="modal-author"></div>
      </div>
      <a class="close-modal">Fechar</a>
    </div>
  </div>
{% endblock content %}
  