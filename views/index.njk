{% extends "layout.njk" %}
  
{% block content %}
  
  <!--Banner Principal-->
  <section class="banner">
    <div class="banner-container">
      <div class="text-container">
        <h2>As melhores receitas</h2>
        <p>
          Aprenda a constrir os melhores pratos
          com receitas criadas por profissionais
          do mundo inteiro
        </p>
      </div>
      <div class="image-container">
        <img src="assets/chef.png" alt="">
      </div>
    </div>
  </section>

  <main>
    <h2>Mais acessadas</h2>
    <section class="cards">
      
      {% for item in items %}
        <div class="card" id="burger">
          <div class="card__image-container">
            <img src={{item.image}} alt="Triplo Bacon Burguer">
          </div>
          <div class="card__content">
            <p class="card-title">{{item.title}}</p>
          </div>
          <div class="card__info">
            <p class="author">{{item.author}}</p>
          </div>
        </div>
      {% endfor %}
      </div>
    </section>
  </main>
  
  <div class="modal-overlay">
    <div class="modal">
      <div class="modal-content">
        <img src=""></img>
      </div>
      <div class="modal-info">
        <div class="modal-title"></div>
        <div class="modal-author"></div>
      </div>
      <a class="close-modal">Fechar</a>
    </div>
  </div>
{% endblock content %}