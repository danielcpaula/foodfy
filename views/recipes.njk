{% extends "layout.njk" %}

{% block content %}
<div class="recipes">
  <div class="image__receita">
    <img src={{item.image}} alt="">
  </div>
  <div class="info__receita">
    <h1>{{item.title}}</h1>
    <h3>{{item.author}}</h3>
  </div>
  <div class="ingredientes">
    <div class="muda__estado">
      <h2>Ingredientes</h2>
      <button id="btnIngre" onclick="mostrarIngredientes()">MOSTRAR</button>
    </div>
    <div class="lista__ingredientes">
      <ul>
        {% for ingredients in item.ingredients %}
          <li>{{ingredients}}</li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="modo__preparo">
    <div class="muda__estado">
      <h2>Modo de preparo</h2>
      <button id="btnPreparo" onclick="mostrarPreparo()">MOSTRAR</button>
    </div>
    <div class="lista__preparo">
      <ul>
        {% for preparation in item.preparation %}
          <li>{{preparation}}</li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="info__adicionais">
    <div class="muda__estado">
      <h2>Informações adicionais</h2>
      <button id="btnAdicionais" onclick="mostrarInfoAdicionais()">MOSTRAR</button>
    </div>
    <div class="lista__informacoes">
      <p>{{item.information}}</p>
    </div>
  </div>
</div>
{% endblock content %}